{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", ".storybook/*.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "backend.js"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
